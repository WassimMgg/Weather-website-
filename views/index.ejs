<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WeatherApp</title>
    <link rel="stylesheet" href="styles/main.css" />
  </head>
  <body>
    <div class="container">
      <div class="weather-side">
        <div class="weather-gradient"></div>
        <div class="date-container">
          <h2 class="date-dayname"><%= dayName %></h2>
          <span class="date-day"><%= dayDate %></span
          ><i class="location-icon" data-feather="map-pin"></i
          ><span class="location"><%=city  %>,<%=country  %></span>
        </div>
        <div class="weather-container">
          <i class="weather-icon" data-feather="sun"><img src="<%=icon  %>" alt="icon"></i>
          <h1 class="weather-temp"><%=temperature  %>°C</h1>
          <h3 class="weather-desc"><%=weather  %></h3>
        </div>
      </div>
      <div class="info-side">
        <div class="today-info-container">
          <div class="today-info">
            <div class="precipitation">
              <span class="title">PRECIPITATION</span
              ><span class="value"><%= precipitation %> mm</span>
              <div class="clear"></div>
            </div>
            <div class="humidity">
              <span class="title">HUMIDITY</span><span class="value"><%= humidity %> %</span>
              <div class="clear"></div>
            </div>
            <div class="wind">
              <span class="title">WIND</span><span class="value"><%=wind  %> km/h</span>
              <div class="clear"></div>
            </div>
          </div>
        </div>
        <div class="week-container">
          <ul class="week-list">
            <li>
              <i class="day-icon" data-feather="sun"><img src="<%=icon  %>" alt="icon"></i
              ><span class="day-name"><%= shortDayName  %></span
              ><span class="day-temp"><%= temperature %> °C</span>
            </li>
            <div class="clear"></div>
          </ul>
        </div>
        <form action="/location" method="post" class="location-container">
          <input
            placeholder="Enter the City name"
            title="Inpit title"
            name="city"
            type="text"
            class="input_field"
            id="city_field"
          />
          <button class="location-button" type="submit">
            <i data-feather="map-pin"></i><span>Enter location</span>
          </button>
        </form>
      </div>
    </div>
    <script src="index.js"></script>
  </body>
</html>
